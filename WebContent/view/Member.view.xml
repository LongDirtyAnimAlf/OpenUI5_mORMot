<mvc:View
	controllerName="sap.ui.demo.mORMot.view.Member"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:control="control"
	xmlns:h="http://www.w3.org/1999/xhtml">
	<Page
		id="page"
		title="{
			parts:[
            	{path:'FirstName'},
                {path:'LastName'}
            ]
		}"
		showNavButton="{device>/isPhone}"
		navButtonPress="handleNavButtonPress">
		<footer>
			<Bar>
				<contentLeft>
				<Button
			         text="{i18n>CALL_BUTTON_TEXT}"
			         icon="sap-icon://outgoing-call"
					 visible="{device>/isPhone}"			         
			         press="handleMemberCallButtonPress" />
			     <Button
			         text="{i18n>TEXT_BUTTON_TEXT}"
			         icon="sap-icon://discussion"
			         visible="{device>/isPhone}"
			         press="handleMemberTextButtonPress" />
				<Button
					icon="sap-icon://email"
					text="{i18n>MAIL_BUTTON_TEXT}"
					press="handleMemberMailButtonPress" />
				</contentLeft>					
				<contentRight>
          			<Button 
            			text="{i18n>UPDATE_BUTTON_TEXT}"
            			type="Accept"
            			visible="{device>/isNoPhone}"
            			press="onUpdate" />
          			<Button 
            			text="{i18n>CANCEL_BUTTON_TEXT}"
            			type="Emphasized"
            			visible="{device>/isNoPhone}"
            			press="onCancel" />
          			<Button
            			text="{i18n>DELETE_BUTTON_TEXT}"
            			type="Reject"
            			visible="{device>/isNoPhone}"            			
            			press="onDelete" />
        		</contentRight>
			</Bar>
		</footer>
		<content>
			<Toolbar>
				<Title text="ID {ID}" level="H2"/>
				<ToolbarSpacer />
				<Link text="{i18n>FlipToResume}" tooltip="{i18n>FlipToResume.tooltip}" press="onShowResume" />
			</Toolbar>
			<ObjectHeader
				title="{LastName}">
				<attributes>
					<ObjectAttribute
						id = "Address"
						text="{Address}" />
					<ObjectAttribute
						text="{City}" /> 
					<ObjectAttribute
						text="{Zip}" />
				</attributes>
			</ObjectHeader>
    		<HBox alignItems="Center" justifyContent="Left" class="sapUiSmallMargin">
      			<core:Icon src="sap-icon://phone" size="2em" color="#1E90FF"/>
				<Title text="{path : 'Phone', type : 'sap.ui.model.odata.type.String', constraints : {'maxLength':'30'}}" titleStyle="H3" class="sapUiSmallMargin"/>      			
    		</HBox>
    		<HBox alignItems="Center" justifyContent="Left" class="sapUiSmallMargin">
      			<core:Icon src="sap-icon://email" size="2em" color="#8E90FF"/>
				<Link text="{path : 'Email', type : 'sap.ui.model.odata.type.String', constraints : {'maxLength':'30'}}" tooltip="{i18n>ClickToMail}" class="sapMH3FontSize sapUiSmallMargin" press="handleMemberMailButtonPress"/>
    		</HBox>
    		<HBox alignItems="Center" justifyContent="Left" class="sapUiSmallMargin">
				<core:Icon src="sap-icon://globe" size="2em" color="#4E90FF"/>    		
      			<Title text="{path : 'WebAddress', type : 'sap.ui.model.odata.type.String', constraints : {}}" titleStyle="H3" class="sapUiSmallMargin"/>
    		</HBox>
    		<VBox
				class="sapUiSmallMargin"
				width="100%">
			<Label text="{i18n>FIRSTNAME}" /> 
			<Input
				width="300px"
				class="sapUiSmallMarginBottom"
				value="{
					path: 'FirstName' 
				}"
			/> 
			<Label text="{i18n>LASTNAME}" /> 
			<Input
				width="300px"
				class="sapUiSmallMarginBottom"				
				value="{
					path: 'LastName' 
				}"
			/> 
			</VBox>
			<VBox alignItems="Center">
				<Image
					src= "{PictureUrl}"
					decorative="true"
					densityAware="false" />
			</VBox>
		</content>
	</Page>
</mvc:View>