					id="icon9"
					class="welcomeIcon"
					src="sap-icon://physical-activity"
					size="5em" />
				<core:Icon
					id="icon2"
					class="welcomeIcon"
					src="sap-icon://physical-activity"
					size="3em" />
				<core:Icon
					id="icon7"
					class="welcomeIcon"
					src="sap-icon://physical-activity"
					size="1.5em" />
