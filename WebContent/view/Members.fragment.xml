<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		noDataText="No Members Found"
		title="Select Member"
		search="handleMembersSearch"
		confirm="handleMembersClose"
		close="handleMembersClose"
		items="{
			path : '/Member',
			sorter : {
				path : 'LastName',
				descending : false
			}
		}">
		<ColumnListItem>
			<cells>
				<ObjectIdentifier
					title="{LastName}"
					icon="{PictureUrl}"					
					text="ID {ID}"/>
				<Text text="{FirstName}" />
				<Text
					text="{
						path : 'MemberTeam',
						formatter : '.formatter.teamName' 
					}" />
			</cells>
		</ColumnListItem>
		<columns>
			<Column>
				<header>
					<Text text="{i18n>MEMBER}" />
				</header>
			</Column>
			<Column
				minScreenWidth="Small"
				demandPopin="true" >
				<header>
					<Text text="{i18n>FIRSTNAME}" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center">
				<header>
					<Text text="{i18n>TEAM}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>